{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3",
      "Effect": "Allow",
      "Action": ["s3:PutObject", "s3:GetObject", "s3:DeleteObject", "s3:ListBucket", "s3:ListObjectsV2"],
      "Resource": ["arn:aws:s3:::${env}-${project}-code-camp", "arn:aws:s3:::${env}-${project}-code-camp/*"]
    },
    {
      "Sid": "CloudfrontInvalidate",
      "Effect": "Allow",
      "Action": ["cloudfront:CreateInvalidation"],
      "Resource": ["arn:aws:cloudfront::${accountId}:distribution/*"]
    }
  ]
}
